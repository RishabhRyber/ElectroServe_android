<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".switchStatus">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:columnCount="2"
        app:rowCount="10">

        <TextView
            android:id="@+id/deviceIDTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="30dp"
            android:text="Device ID Indicator"
            android:textAlignment="center"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="0" />


        <TextView
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:text="Switch Status"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/deviceStatusTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="OFF"
            app:layout_column="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:text="USB  Status"
            app:layout_column="0"
            app:layout_row="2" />

        <TextView
            android:id="@+id/USBStatusTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="OFF"
            app:layout_column="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer:"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_columnSpan="2"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hours"
            app:layout_column="0"
            app:layout_row="4" />

        <EditText
            android:id="@+id/hrsInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Hours"
            android:inputType="numberSigned"
            app:layout_column="1"
            app:layout_row="4" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minutes"
            app:layout_column="0"
            app:layout_row="6" />

        <EditText
            android:id="@+id/minInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Minutes"
            android:inputType="numberSigned"
            app:layout_column="1"
            app:layout_row="6" />

        <CheckBox
            android:id="@+id/usbStatusCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn On USB" />

        <Button
            android:id="@+id/submitDeviceBtn"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="50dp"
            android:text="Turn ON"
            app:layout_column="0"
            app:layout_columnSpan="0"
            app:layout_row="8" />

    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>